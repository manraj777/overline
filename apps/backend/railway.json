{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "echo 'Build phase - dependencies installed'",
    "watchPatterns": ["apps/backend/**", "packages/shared/**"]
  },
  "deploy": {
    "startCommand": "cd /app/apps/backend && npx prisma generate && pnpm build && node dist/main.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
