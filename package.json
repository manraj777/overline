{
  "name": "overline",
  "version": "1.0.0",
  "private": true,
  "description": "Multi-tenant appointment & queue management system for clinics, salons, and walk-in businesses",
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "dev:backend": "pnpm --filter @overline/backend dev",
    "dev:user-web": "pnpm --filter @overline/user-web dev",
    "dev:admin-web": "pnpm --filter @overline/admin-web dev",
    "build": "pnpm run --parallel build",
    "build:backend": "pnpm --filter @overline/backend build",
    "build:user-web": "pnpm --filter @overline/user-web build",
    "build:admin-web": "pnpm --filter @overline/admin-web build",
    "test": "pnpm run --parallel test",
    "test:backend": "pnpm --filter @overline/backend test",
    "lint": "pnpm run --parallel lint",
    "db:generate": "pnpm --filter @overline/backend prisma:generate",
    "db:migrate": "pnpm --filter @overline/backend prisma:migrate",
    "db:seed": "pnpm --filter @overline/backend prisma:seed",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
